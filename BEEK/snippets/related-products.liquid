{% assign number_of_related_products_to_show = settings.products_per_row %}

{% assign number_of_related_products_to_fetch = number_of_related_products_to_show | plus: 1 %}
  
{% if collection == null or collection.handle == 'frontpage' or collection.handle == 'all' %}
{% assign found_a_collection = false %}
{% for c in product.collections %}
  {%- comment %}<locksmith:8d54>{% endcomment -%}
    {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: c, subject_parent: product, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
  {%- comment %}</locksmith:8d54>{% endcomment -%}
  {% if found_a_collection == false and c.handle != 'frontpage' and c.handle != 'all' and c.all_products_count > 1 %}
    {% assign found_a_collection = true %}
    {% assign collection = c %}
  {% endif %}
{% endfor %}
{% endif %}

{% if collection and collection.products_count > 1 %}
    
<div class="row products">
    <h3 class="collection-title span12 clearfix">{{ 'products.general.related_products' | t }}</h3>

{% assign current_product = product %}
{% assign current_product_found = false %}
{%- comment %}<locksmith:4124>{% endcomment -%}
  {%- assign locksmith_280d_forloop__size = 0 %}{% for product in collection.products limit: number_of_related_products_to_fetch %}{% capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: collection, variable: 'transparent' %}{% endcapture %}{% if var == 'true' %}{% assign locksmith_280d_forloop__size = locksmith_280d_forloop__size | plus: 1 %}{% endif %}{% endfor %}{% assign locksmith_280d_forloop__index = nil -%}
{%- comment %}</locksmith:4124>{% endcomment -%}
{% for product in collection.products limit: number_of_related_products_to_fetch %}
  {%- comment %}<locksmith:9b7b>{% endcomment -%}
    {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: collection, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% if locksmith_280d_forloop__index == nil %}{% assign locksmith_280d_forloop__index = 1 %}{% assign locksmith_280d_forloop__index0 = 0 %}{% else %}{% assign locksmith_280d_forloop__index = locksmith_280d_forloop__index | plus: 1 %}{% assign locksmith_280d_forloop__index0 = locksmith_280d_forloop__index0 | plus: 1 %}{% endif %}{% if locksmith_280d_forloop__index == 1 %}{% assign locksmith_280d_forloop__first = true %}{% else %}{% assign locksmith_280d_forloop__first = false %}{% endif %}{% if locksmith_280d_forloop__index == locksmith_280d_forloop__size %}{% assign locksmith_280d_forloop__last = true %}{% else %}{% assign locksmith_280d_forloop__last = false %}{% endif %}{% assign locksmith_280d_forloop__rindex = locksmith_280d_forloop__size | minus: locksmith_280d_forloop__index | minus: 1 %}{% assign locksmith_280d_forloop__rindex0 = locksmith_280d_forloop__size | minus: locksmith_280d_forloop__index0 | minus: 1 %}{% else %}{% continue %}{% endif -%}
  {%- comment %}</locksmith:9b7b>{% endcomment -%}
  {% if product.handle == current_product.handle %}
    {% assign current_product_found = true %}
  {% else %}
    {% unless current_product_found == false and locksmith_280d_forloop__last %}
      {% include 'product-loop' with collection.handle %}
    {% endunless %}
  {% endif %}
{% endfor %}

</div>

{% endif %}