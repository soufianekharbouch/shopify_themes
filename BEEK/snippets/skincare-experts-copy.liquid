{% if block.settings.skincare_experts_enabled %}
    <div class="skincare__experts">
        {%- if block.settings.experts_ttl != blank -%}
            <h2>{{ block.settings.experts_ttl | escape }}</h2>
        {%- endif -%}

        {%- if block.settings.experts_desc != blank -%}
            <p>{{ block.settings.experts_desc | escape }}</p>
        {%- endif -%}

        <div class="collection-list experts">
            <div class="row experts__grid expr-{{ page.metafields.accentuate.expert_name.size }}">
                {% for expert in page.metafields.accentuate.expert_name %}
                    <div class="col-6 col-sm-4 expert__wrap order-{{ forloop.index0 | plus: 1 }}">
                        <div class="img-wrap">
                            {% if page.metafields.accentuate.expert_photo[forloop.index0] != blank %}
                                <div class="collection-list__image">
                                    <img src="{{ page.metafields.accentuate.expert_photo[forloop.index0][0].src }}" alt="" loading="lazy">
                                </div>
                            {% else %}
                                <img src="https://via.placeholder.com/300"/>
                            {% endif %}
                        </div>
                        <span class="expert__name">
              {% if page.metafields.accentuate.expert_name[forloop.index0] != blank %}
                  {{ page.metafields.accentuate.expert_name[forloop.index0] }}
              {% endif %}
            </span>
                        <span class="expert__title">
              {% if page.metafields.accentuate.expert_title[forloop.index0] != blank %}
                  {{ page.metafields.accentuate.expert_title[forloop.index0] }}
              {% endif %}
            </span>
                        {% if page.metafields.accentuate.expert_book_now_link[forloop.index0] != blank %}
                            <a href="{{ page.metafields.accentuate.expert_book_now_link[forloop.index0] }}" class="book__now">Book Now</a>
                        {% endif %}
                        <a href="" class="view__products">Learn More</a>
                    </div>
                    {% if forloop.index < 3 %}
                        {% assign prod_order = 3 %}
                        {% elsif forloop.index > 2 and forloop.index < 5 %}
                        {% assign prod_order = 5 %}
                        {% elsif forloop.index > 4 and forloop.index < 7 %}
                        {% assign prod_order = 7 %}
                        {% elsif forloop.index > 6 and forloop.index < 9 %}
                        {% assign prod_order = 9 %}
                        {% elsif forloop.index > 8 and forloop.index < 11 %}
                        {% assign prod_order = 11 %}
                        {% elsif forloop.index > 10 and forloop.index < 13 %}
                        {% assign prod_order = 13 %}
                        {% elsif forloop.index > 12 and forloop.index < 15 %}
                        {% assign prod_order = 15 %}
                    {% endif %}
                    {% if forloop.index == 1 or forloop.index == 3 or forloop.index == 5 or forloop.index == 7 or forloop.index == 9 or forloop.index == 11 or forloop.index == 13 or forloop.index == 15 %}
                        {% assign arrow = "xs_left" %}
                    {% else %}
                        {% assign arrow = "xs_right" %}
                    {% endif %}
                    {% if forloop.index == 1 or forloop.index == 2 or forloop.index == 3 %}
                        {% assign prod_order_md = 4 %}
                        {% elsif forloop.index == 4 or forloop.index == 5 or forloop.index == 6 %}
                        {% assign prod_order_md = 7 %}
                        {% elsif forloop.index == 7 or forloop.index == 8 or forloop.index == 9 %}
                        {% assign prod_order_md = 10 %}
                        {% elsif forloop.index == 10 or forloop.index == 11 or forloop.index == 12 %}
                        {% assign prod_order_md = 13 %}
                    {% else %}
                        {% assign prod_order_md = 16 %}
                    {% endif %}
                    {% if forloop.index == 1 or forloop.index == 4 or forloop.index == 7 or forloop.index == 10 or forloop.index == 13 or forloop.index == 13 or forloop.index == 16 %}
                        {% assign arrow_md = "_left" %}
                    {% elsif forloop.index == 2 or forloop.index == 5 or forloop.index == 8 or forloop.index == 11 or forloop.index == 14 or forloop.index == 17 or forloop.index == 20 %}
                        {% assign arrow_md = "_center" %}
                    {% else %}
                        {% assign arrow_md = "_right" %}
                    {% endif %}
                    <div class="products-wrap col-12 order-{{ prod_order }} order-sm-{{ prod_order_md }}" style="display: none">
                        <div class="inner_content {{ arrow }} {{ arrow_md }} expert-{{ forloop.index0 | plus: 1 }}">
                          <span class="expert__name">
                            {% if page.metafields.accentuate.expert_name[forloop.index0] != blank %}
                                {{ page.metafields.accentuate.expert_name[forloop.index0] }}
                            {% endif %}
                          </span>
                            <span class="expert__title">
                                {% if page.metafields.accentuate.expert_title[forloop.index0] != blank %}
                                    {{ page.metafields.accentuate.expert_title[forloop.index0] }}
                                {% endif %}
                              </span>
                            <p class="expert__bio">
                                {% if page.metafields.accentuate.expert_bio[forloop.index0] != blank %}
                                    {{ page.metafields.accentuate.expert_bio[forloop.index0] }}
                                {% endif %}
                            </p>
                            {% if page.metafields.accentuate.expert_book_now_link[forloop.index0] != blank %}
                                <a href="{{ page.metafields.accentuate.expert_book_now_link[forloop.index0] }}" class="book__now">Book Now</a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
