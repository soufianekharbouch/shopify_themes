<div class="concern-wrap"
  {% if block.settings.items_centered %}
    style="justify-content: center"
  {% endif %}
>
  <div class="row">
    {% if block.settings.concern-title != blank %}
      <h2 class="section__title col-12">{{ block.settings.concern-title | escape }}</h2>
    {% endif %}
  </div>

