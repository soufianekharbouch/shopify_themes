    {% if block.settings.url1 %}
      <div class="item col-md-3">
        <a href="{{ block.settings.url1 | default: "#" }}" class="concern-list-item">
          {% if block.settings.concern_image1 != blank %}
            <div class="concern__image">
              <img src="{{ block.settings.concern_image1 | img_url: '564x564' }}"
                   alt="{{ block.settings.title1 | escape }}"/>
            </div>
          {% else %}
            <img src="https://via.placeholder.com/300"/>
          {% endif %}
          <p>{{ block.settings.title1 | default: default_label }}</p>
        </a>
      </div>
    {% endif %}

