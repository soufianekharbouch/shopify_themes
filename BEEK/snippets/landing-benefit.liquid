<div class="row benefit-wrap">
  <div class="col-12 col-md-6 col-lg-8">
    {% if block.settings.benefit_heading != blank %}
      <h2 class="section__title d-md-none">{{ block.settings.benefit_heading | escape }}</h2>
    {% endif %}
    <div class="benefit-image row">
      {% if block.settings.closeup-image != blank %}
        <img src="{{ block.settings.closeup-image | img_url: '850x600' }}" alt="{{ block.settings.benefit_heading | escape }}" />
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  </div>
  <div class="col-12 col-md-6 col-lg-4">
    {% if block.settings.benefit_heading != blank %}
      <h2 class="section__title d-none d-md-block">{{ block.settings.benefit_heading | escape }}</h2>
    {% endif %}

    <div class="carousel__wrap">
      <div class="slide">
        {% if block.settings.benefit_title1 != blank %}
          <h2 class="benefit__title">{{ block.settings.benefit_title1 | escape }}</h2>
        {% endif %}
        {% if block.settings.benefit_text1 != blank %}
          <p class="benefit__text">{{ block.settings.benefit_text1 | escape }}</p>
        {% endif %}
      </div>
      <div class="slide">
        {% if block.settings.benefit_title2 != blank %}
          <h2 class="benefit__title">{{ block.settings.benefit_title2 | escape }}</h2>
        {% endif %}
        {% if block.settings.benefit_text2 != blank %}
          <p class="benefit__text">{{ block.settings.benefit_text2 | escape }}</p>
        {% endif %}
      </div>
      <div class="slide">
        {% if block.settings.benefit_title3 != blank %}
          <h2 class="benefit__title">{{ block.settings.benefit_title3 | escape }}</h2>
        {% endif %}
        {% if block.settings.benefit_text3 != blank %}
          <p class="benefit__text">{{ block.settings.benefit_text3 | escape }}</p>
        {% endif %}
      </div>
    </div>

  </div>

</div>
