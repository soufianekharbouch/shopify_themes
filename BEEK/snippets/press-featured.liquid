<div class="press-featured container">
  <div class="row content__wrap no-gutters">
    <div class="col-12 col-lg-5 text__wrap">
      <div class="art__tag">
        {%- if block.settings.art_tag != blank -%}
          <h4>{{ block.settings.art_tag | escape }}</h4>
        {%- endif -%}
      </div>
      {% if block.settings.art_logo != blank %}
        <div class="art__logo">
          <img src="{{ block.settings.art_logo | img_url: 'master' }}" alt="" />
        </div>
      {% endif %}

      {%- if block.settings.art_ttl != blank -%}
        <div class="art__ttl">
          {{ block.settings.art_ttl }}
        </div>
      {%- endif -%}

      {% if block.settings.button_label != blank and block.settings.button_link != blank %}
        <div class="text-center">
          <a href="{{ block.settings.button_link }}" class="read__more">
            {{ block.settings.button_label | escape }}
          </a>
        </div>
      {% endif %}
    </div>
    <div class="col-12 col-lg-10 section__image">
      {% if block.settings.art_mob_image != blank %}
        <img src="{{ block.settings.art_mob_image | img_url: 'master' }}" class="d-block d-md-none" alt="" />
      {% endif %}
      {% if block.settings.art_desk_image != blank %}
        <img src="{{ block.settings.art_desk_image | img_url: 'master' }}" class="d-none d-md-block" alt="" />
      {% endif %}
    </div>
  </div>
</div>
