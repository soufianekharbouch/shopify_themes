{%- assign giftItemId = false -%}
{% for item in cart.items %}
  {% if item.variant.title contains "(Freegifts)" or item.variant.title contains "% off)" or product.metafields.secomapp['freegifts'] %}
    {%- assign giftItemId = item.id -%}
  {% endif %}
{% endfor %}

<div class="cart-block">
  <div class="cart-header">
    <span class="header__ttl">
      
      Your cart
      {% if cart.item_count > -1 %}
        <span class="parentheses d-none">(</span>
        <span class="count">{{ cart.item_count }}
        </span>
        <span class="parentheses">)</span>
      {% endif %}
    </span>
    <a href="" class="close-btn-cart">
      {% include 'icon-close' %}
    </a>
  </div>

  <div class="progressBarContainer">
    <div class="ProgressText"></div>
    <div class="ProgressBar">
      <div class="ProgressBarLavel"></div>

    </div>
  </div>
  <style>
    .progressBarContainer {
      width: 100%;
      margin: 10px auto;
    }
    .ProgressBar {
      width: 80%;
      height: 13px;
      border: solid 0 #a4962a;
      background-color: #ECEEF0;
      border-radius: 6px;
      margin: 0 14px;
    }
    .ProgressBarLavel {
      width: 0;
      height: 13px;
      border-radius: 6px;
      background-color: #FFE844;
      -webkit-transition: width 1s ease-in-out;
    }
    .ProgressText {
      text-align: left;
      padding-left: 3%;
      margin: 8px 0;
    }
    .cart_message
     {
      text-align: left;
    padding: 1.5rem 1.5rem 0;
    font-size: 14px;
    color: #bbc3c9;
     }
  </style>
 {% if section.settings.show_cart_text ==true %} 
 <div class="cart_message" >
 {{section.settings.message_cart_text}} 

  </div>
  {% endif %}
  <form action="/cart" method="post" novalidate class="cart__form">
    <div class="scrollable__area">
      {% for item in cart.items %}
        {% unless item.id == giftItemId %}
          <div class="offered-product-block product__wrap" data-variant-id="{{ item.variant_id }}">
            {% include 'responsive-image' with
                        image: item.image,
                        max_width: 79,
                        max_height: 106,
                        image_attributes: "data-product-featured-image",
                        wrapper_class: wrapper_class,
                        wrapper_attributes: "data-product-image-wrapper",%}
            <div class="details-block">
              <div class="title">
                <h1>
                  {{ item.product.metafields.accentuate.custom_name | default: item.product.title }}
                </h1>
                <p>
                  {{ item.product.metafields.accentuate.short_description }}
                </p>
              </div>
              <div class="price">
                {{ item.line_price | money }}
              </div>
              <div class="size-wrap">
                <div class="size">
                  {% if item.variant.option1 != 'Default Title' %}
                    {% for i in (1..item.product.options.size) %}
                      <div class="option_row">
                        {% case i %}
                          {% when 1 %}
                            {{ item.product.options.first }}
                            :
                            <span class="value">{{ item.variant.option1 }}
                            </span>
                          {% when 2 %}
                            {{ item.product.options[1] }}
                            :
                            <span class="value">{{ item.variant.option2 }}
                            </span>
                          {% else %}
                            {{ item.product.options.last }}
                            :
                            <span class="value">{{ item.variant.option3 }}
                            </span>
                        {% endcase %}
                      </div>
                    {% endfor %}
                  {% endif %}
                </div>
                {% if giftItemId != item.id %}
                  <div class="amount-update-wrap">
                    <div class="amount js-amount-block">
                      <span class="js-minus-amount amount_toggle">-</span>
                      <div class="input-amount js-amount-block">
                        {{ item.quantity }}
                      </div>
                      <span class="js-plus-amount amount_toggle">+</span>
                    </div>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endunless %}
      {% endfor %}
      {% for item in cart.items %}
        {% if item.id == giftItemId %}
          <div class="gift-block">
            <div class="row">
              <div class="col">
                <h1>Your gift</h1>
                <div class="gift-cart">
                  <div class="offered-product-block">
                    <div class="block__copy">
                      {{ shop.metafields.accentuate.your_gift_block_copy }}
                    </div>
                    {% include 'responsive-image' with
                                    image: item.image,
                                    max_width_image: 79,
                                    max_height_image: 106,
                                    image_attributes: "data-product-featured-image",
                                    wrapper_class: wrapper_class,
                                    wrapper_attributes: "data-product-image-wrapper",%}
                    <div class="details-block">
                      <div class="title">
                        <h1>
                          {{ item.product.metafields.accentuate.custom_name | default: item.product.title }}
                        </h1>
                        <p>
                          {{ item.product.metafields.accentuate.short_description }}
                        </p>
                      </div>
                      <div class="price">
                        Free gift
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="cart__bottom">
      <div class="subtotal-block">
        <div class="subtotal-price">
          <span class="title">order
            {{ 'cart.general.subtotal' | t }}
          </span>
          <span class="subtotal-amount-price">{{ cart.total_price | money }}
          </span>
        </div>
      </div>
      <div class="action__wrap">
        <input type="submit" name="checkout" class="button" value="checkout">
      </div>
    </div>
  </form>
</div>
