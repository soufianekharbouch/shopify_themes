    <script>
      $('.product__description__property').each(function(){
        var cont=""+$(this).html();
        if(cont.includes('is_utm_gift:') || cont.includes('is_free_gift:') || cont.includes('is_2xab_gift:')){
          $(this).remove();
        }
      })
      var i=0;
      setInterval(function () {i=0}, 4000);
      $('#order-summary').on('DOMSubtreeModified', function(){
       setTimeout(addfreebie, 700);
      });
      function addfreebie(){
        cont=""+$("#order-summary").html();
        if(i<1 && cont.includes('<span class="reduction-code__text">FREEBIE</span>')){
          AjaxAdd('{"items": [{"id": "33031743176739","quantity":"1"}]}');
          i=i+1;
        }

       

      }
      function AjaxAdd(data_to_add) {
        $.ajax({
          url: "/cart.js"
        }).done(function(data) {
          data=JSON.parse(data)
          var already_exist=false;
          for (item of data.items){
            if(item.variant_id =="33031743176739"){
              already_exist=true
            }
          }
          if(!already_exist){
                data_to_add = JSON.parse(data_to_add);
              $.ajax({
                url: '{{shop.url}}/cart/add.js',
                dataType: 'json',
                type: 'post',
                data: data_to_add, // $addToCartForm.serialize()+'&shipstocountry=US',
                success: function(Data) {
                    location.reload();
                }
              });
          }else{
            console.log("Auto added product already exist")
          }
        });


    
      }
    </script>
