<div class="grid--full text-max-width">
  <div>
    <div class="text-center content-wrapper--horizontal section-header">
      <div class="display-table-cell">
        <h1>{{ page.title }}</h1>
        {% include 'breadcrumb' %}
      </div>
    </div>
  </div>
  <hr class='hr--center'>
  <div>
    <div class="rte">
      {% assign content = page.content | replace: '&lt;!-- acsplit --&gt;', '<!-- acsplit -->' | split: '<!-- acsplit -->' %}{% for c in content %}{% include 'product-description-slider-page' with c %}{% endfor %}
    </div>
   </div>
   <hr class="hr--center">
</div>
