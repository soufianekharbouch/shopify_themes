[
  {
    "name": "theme_info",
    "theme_name": "Starter theme",
    "theme_version": "1.0.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https:\/\/github.com\/Shopify\/starter-theme",
    "theme_support_url": "https:\/\/github.com\/Shopify\/starter-theme\/issues",
    "theme_packaged_with": "@shopify\/slate-tools@1.0.0-beta.19"
  },
  {
    "name": "CROSS OUT PRICE",
    "settings": [
      {
        "type": "text",
        "id": "cross_out_price_collection_handle",
        "label": "Collection Handle",
        "default": "bath-body|sensitive-skin",
        "info": "separate by |"
      },
      {
        "type": "text",
        "id": "cross_out_price_value",
        "label": "% OFF",
        "default": "30|60",
        "info": "separate by |"
      }
    ]
  },
  {
    "name": "COUNT DOWN PDP & COLLECTION PAGE",
    "settings": [
      {
        "type": "text",
        "id": "count_down_tag",
        "label": "Product Tag",
        "default": "All Beauty",
        "info": "to show the countdown in product page"
      },
      {
        "type": "text",
        "id": "count_down_collection",
        "label": "Collection Handle",
        "default": "clinically-kind-skincare",
        "info": "to show the countdown in collection page"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent",
        "default": "#c4cdd5",
        "info": "Buttons and special ornaments"
      },
      {
        "type": "color",
        "id": "color_body_text",
        "label": "Text",
        "default": "#161d25"
      },
      {
        "type": "color",
        "id": "color_main_bg",
        "label": "Background",
        "default": "#fff"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "font_heading",
        "default": "helvetica_n4",
        "label": "Headings"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "default": "helvetica_n4",
        "label": "Body text"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social sharing image"
      },
      {
        "type": "image_picker",
        "id": "share_image",
        "label": "Image",
        "info": "Shown when sharing a link on social media. [Learn more](https:\/\/help.shopify.com\/manual\/using-themes\/troubleshooting\/showing-social-media-thumbnail-images\/) about image thumbnails."
      },
      {
        "type": "header",
        "content": "Social sharing options"
      },
      {
        "type": "checkbox",
        "id": "social_sharing_blog",
        "label": "Enable sharing for blog articles",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_facebook",
        "label": "Share on Facebook",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_twitter",
        "label": "Tweet on Twitter",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_pinterest",
        "label": "Pin on Pinterest",
        "default": true
      },
      {
        "type": "header",
        "content": "Sharing links"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter link"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook link"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest link"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram link"
      },
      {
        "type": "text",
        "id": "social_snapchat_link",
        "label": "Snapchat link"
      },
      {
        "type": "text",
        "id": "social_tumblr_link",
        "label": "Tumblr link"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "Youtube link"
      },
      {
        "type": "text",
        "id": "social_vimeo_link",
        "label": "Vimeo link"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok link"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "cart_crosssell_enable",
        "label": "Enable cart crosssell",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "checkout_thankyouproducts_enable",
        "label": "Enable Thank You Products",
        "default": true
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  },
  {
    "name": "Goat Feed Sources",
    "settings": [
      {
        "type": "text",
        "id": "goat_feed_nest",
        "label": "Nest"
      },
      {
        "type": "text",
        "id": "goat_feed_youtube",
        "label": "YouTube"
      }
    ]
  }
]