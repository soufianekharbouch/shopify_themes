<section>
    <div class="container pb-5 mb-5">
        <div class="row">
            <div class="col-12 col-md-9">
              <div class="col-12"><h1>SEARCH FOR A STOCKIST</h1></div>
                <script src="https://www.powr.io/powr.js?platform=shopify"></script><div class="powr-map" id="b4625a79_1587863686"></div> 
              </div>
            <div class="col-12 col-md-3">
                <div class="info-block p-5">
                    <h4>{{ section.settings.info_heading }}</h4>
                    <hr/>
                    <p class="bold">{{ section.settings.info_bold }}</p>
                    {{ section.settings.info_richtext }}
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
  {
    "name": "Stockists",
    "settings": [
      {
        "id": "info_heading",
        "type": "text",
        "label": "Info - Heading",
        "default": "PLEASE NOTE"
      },
      {
        "id": "info_bold",
        "type": "textarea",
        "label": "Info - Bold Text",
        "default": "Our Stockists only carry Body collections."
      },
      {
        "id": "info_richtext",
        "type": "richtext",
        "label": "Info - Rich Text Content"
      }
    ]
  }
{% endschema %}

{{ 'about_the_store.js' | asset_url | script_tag }}
