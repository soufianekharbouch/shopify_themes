<div id="partner__contact_form">
  {% form 'contact' %}
    <div class="container">
      <div class="row text-center">
        <div class="col-12">
          <h1>{{ section.settings.form_heading }}</h1>
        </div>
        <div class="col-12">
          <div class="rte">{{ page.content }}</div>
        </div>
        <div class="col-12">
          <p class="note">{{ section.settings.form_message }}</p>
        </div>
      </div>

      <div class="row text-center">
        {% if form.posted_successfully? %}
          <div class="col-12">
            <p class="form-success">
              {{ 'contact.form.post_success' | t }}
            </p>
          </div>
        {% endif %}
        <div class="col-12">
          {{ form.errors | default_errors }}
        </div>
      </div>
    </div>
    <div class="container fieldset">
      <div class="row">
        <div class="col-12 field">
          <input type="text"
                 name="contact[store]"
                 class="w-100"
                 placeholder="Store/Company Name*"
                 required>
        </div>
        <div class="col-12 field">
          <input type="text"
                 name="contact[name]"
                 class="w-100"
                 placeholder="Full name*"
                 value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}"
                 required>
        </div>
        <div class="col-12 field">
          <input type="email"
                 name="contact[email]"
                 class="w-100"
                 placeholder="Email address*"
                 value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                 required
                 spellcheck="false"
                 autocomplete="off"
                 autocapitalize="off">
        </div>
        <div class="col-12 field rbtn">
          <label>
            Does your company have a physical store?
          </label>
          <div class="radio__wrap">
            <span class="r__wrap">
              <input type="radio" class="radio" id="ContactFormPSYes" name="contact[Physical Store]" checked="checked" value="Yes"/>
              <label for="ContactFormPSYes">Yes</label>
            </span>
            <span class="r__wrap">
              <input type="radio" class="radio" id="contactFormPSNo" name="contact[Physical Store]" value="No"/>
              <label for="contactFormPSNo">No</label>
            </span>
            <span class="r__wrap">
              <input type="radio" class="radio" id="contactFormPSNA" name="contact[Physical Store]" value="N/A"/>
              <label for="contactFormPSNA">N/A</label>
            </span>
          </div>
        </div>

        <div class="col-12 field">
          <input type="tel"
                 name="contact[phone]"
                 class="w-100"
                 placeholder="{{ 'contact.form.phone' | t }}"
                 value="{% if form[phone] %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                 pattern="[0-9\-]*">
        </div>
        <div class="col-12 field">
          <input type="text"
                 name="contact[address]"
                 class="w-100"
                 placeholder="Street Address"
                 value="{% if form[address] %}{{ form.address }}{% elsif customer %}{{ customer.address }}{% endif %}"
          >
        </div>
        <div class="col-12 field">
          <input type="text"
                 name="contact[city]"
                 class="w-100"
                 placeholder="City"
                 value="{% if form[city] %}{{ form.city }}{% elsif customer %}{{ customer.city }}{% endif %}"
          >
        </div>
        <div class="col-12 field">
          <select
              style="background: url('{{ 'chevron-down.png' | asset_url }}');"
              class="select-wrap w-100"
              name="contact[state]"
              data-default="{{ form.province }}">
            <option selected disabled>State</option>
            <option value="AL">Alabama</option>
            <option value="AK">Alaska</option>
            <option value="AS">American Samoa</option>
            <option value="AZ">Arizona</option>
            <option value="AR">Arkansas</option>
            <option value="CA">California</option>
            <option value="CO">Colorado</option>
            <option value="CT">Connecticut</option>
            <option value="DE">Delaware</option>
            <option value="DC">Washington DC</option>
            <option value="FM">Micronesia</option>
            <option value="FL">Florida</option>
            <option value="GA">Georgia</option>
            <option value="GU">Guam</option>
            <option value="HI">Hawaii</option>
            <option value="ID">Idaho</option>
            <option value="IL">Illinois</option>
            <option value="IN">Indiana</option>
            <option value="IA">Iowa</option>
            <option value="KS">Kansas</option>
            <option value="KY">Kentucky</option>
            <option value="LA">Louisiana</option>
            <option value="ME">Maine</option>
            <option value="MH">Marshall Islands</option>
            <option value="MD">Maryland</option>
            <option value="MA">Massachusetts</option>
            <option value="MI">Michigan</option>
            <option value="MN">Minnesota</option>
            <option value="MS">Mississippi</option>
            <option value="MO">Missouri</option>
            <option value="MT">Montana</option>
            <option value="NE">Nebraska</option>
            <option value="NV">Nevada</option>
            <option value="NH">New Hampshire</option>
            <option value="NJ">New Jersey</option>
            <option value="NM">New Mexico</option>
            <option value="NY">New York</option>
            <option value="NC">North Carolina</option>
            <option value="ND">North Dakota</option>
            <option value="MP">Northern Mariana Islands</option>
            <option value="OH">Ohio</option>
            <option value="OK">Oklahoma</option>
            <option value="OR">Oregon</option>
            <option value="PW">Palau</option>
            <option value="PA">Pennsylvania</option>
            <option value="PR">Puerto Rico</option>
            <option value="RI">Rhode Island</option>
            <option value="SC">South Carolina</option>
            <option value="SD">South Dakota</option>
            <option value="TN">Tennessee</option>
            <option value="TX">Texas</option>
            <option value="UT">Utah</option>
            <option value="VT">Vermont</option>
            <option value="VI">U.S. Virgin Islands</option>
            <option value="VA">Virginia</option>
            <option value="WA">Washington</option>
            <option value="WV">West Virginia</option>
            <option value="WI">Wisconsin</option>
            <option value="WY">Wyoming</option>
            <option value="AA">Armed Forces Americas</option>
            <option value="AE">Armed Forces Europe</option>
            <option value="AP">Armed Forces Pacific</option>
          </select>
        </div>
        <div class="col-12 field">
          <input type="text"
                 name="contact[zip]"
                 class="w-100"
                 placeholder="Zip code"
                 value="{% if form[zip] %}{{ form.zip }}{% elsif customer %}{{ customer.zip }}{% endif %}"
          >
        </div>
        <div class="col-12 field">
          <textarea rows="10"
                    name="contact[body]"
                    class="w-100"
                    placeholder="Leave a message*"
                    required>
            {%- if form.body -%}
              {{- form.body -}}
            {%- endif -%}
            </textarea>
        </div>
        <div class="col-12 field rbtn">
          <label>
            Subscribe me to the Beekman 1802 Newsletter.
          </label>
          <div class="radio__wrap">
            <span class="r__wrap">
              <input type="radio" id="yesPlease" class="radio" name="customer[accepts_marketing]" checked="checked" />
              <label for="yesPlease">Yes, please!</label>
            </span>
            <span class="r__wrap">
              <input type="radio" class="radio" id="noThanks" name="customer[accepts_marketing]" />
              <label for="noThanks">No, thanks.</label>
            </span>
          </div>
        </div>
        <div class="col-12 field action">
          <input type="submit" class="btn" value="{{ section.settings.submit_label }}">
        </div>
      </div>
    </div>
  {% endform %}
</div>

{% schema %}
  {
    "name": "Become a Partner - Form",
    "settings": [
      {
        "id": "form_heading",
        "type": "text",
        "label": "Form Heading",
        "default": "Interested in carrying Beekman 1802 products in your store?"
      },
      {
        "id": "form_message",
        "type": "text",
        "label": "Form - Tagline",
        "default": "Please complete the form below and we will be in touch."
      },
      {
        "id": "submit_label",
        "type": "text",
        "label": "Form - Submit Label",
        "default": "Send Message"
      }
    ]
  }
{% endschema %}