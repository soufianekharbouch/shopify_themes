      },
      {
        "id": "press-ribbon",
        "type": "image_picker",
        "label": "As Seen In ..."
      },
      {
        "id": "connect_banner_mobile",
        "type": "image_picker",
        "label": "Connect With Us - Mobile Banner Image"
      },
      {
        "id": "connect_banner_desktop",
        "type": "image_picker",
        "label": "Connect With Us - Desktop Banner Image"
      },
      {
        "id": "connect_heading",
        "type": "text",
        "label": "Connect With Us - Heading"
      },
      {
        "id": "connect_content",
        "type": "textarea",
        "label": "Connect With Us - Text"
      },
      {
        "id": "connect_handle",
        "type": "text",
        "label": "Social Handle"
      },
      {
        "id": "connect_handle_link",
        "type": "url",
        "label": "Link - Social Handle"
      },
      {
        "id": "appearances_heading",
        "type": "text",
        "label": "Appearances - Heading"
      },
      {
        "id": "appearances_content",
        "type": "textarea",
        "label": "Appearances - Text"
      }, 
      {
        "id": "appearances_button_label",
        "type": "text",
        "label": "Button - Label"
      },
      {
        "id": "appearances_button_link",
        "type": "url",
        "label": "Button - Link"
      }
    ],
    "blocks": [
      {
        "type": "image_with_caption", 
        "name": "Image With Caption",
        "settings": [
            {
                "id": "caption_img_mobile",
                "type": "image_picker",
                "label": "Image - Mobile"
            },
            {
                "id": "caption_text",
                "type": "textarea",
                "label": "Caption"
            },
            {
                "id": "quote",
                "type": "textarea",
                "label": "Quote"
            },
            {
                "id": "attribution",
                "type": "text",
                "label": "Citation"
            }
        ]
      }
    ]
  }
