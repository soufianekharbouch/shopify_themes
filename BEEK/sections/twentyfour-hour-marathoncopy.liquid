{{ 'owl.carousel.min.js' | asset_url | script_tag }}

<section id="beekman_the_goats">

    <div class="container marathon_video">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8 text-center">
                <h1>{{ section.settings.video_heading }}</h1>
            </div>
            <div class="col-2"></div>
            <div class="d-none d-lg-block col-lg-2"></div>
            <div class="col-12 col-lg-8 text-center">
                <p>{{ section.settings.video_text }}</p>
            </div>
            <div class="d-none d-lg-block col-lg-2"></div>
            <!--<div class="col-12 text-center">
                <a class="contact_link" href="{{ section.settings.video_button_link }}" target="_blank">{{ section.settings.video_button_label }}</a>
            </div>-->
            <div class="d-none d-lg-block col-lg-2"></div>
            <div class="col-12 col-lg-8">
                <div class="vimeo-embed-wrapper">
                  <iframe width="560" height="315" src="{{ section.settings.livefeed_link }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            </div>
            <div class="d-none d-lg-block col-lg-2"></div>
        </div>
    </div>
</section>

