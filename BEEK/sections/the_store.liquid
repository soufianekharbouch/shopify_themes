{{ 'owl.carousel.min.js' | asset_url | script_tag }}

<section id="beekman_the_store">
    <div class="container pb-5">
        <div class="row">
            <div class="col-12 d-lg-none">
                {% include 'responsive-image-aspect-ratio' with
                    image: section.settings.hero_mobile,
                    hero_aspect_ratio: 75,
                    max_width: 2000,
                    max_height: 2000,
                %}
            </div>
            <div class="col-12 d-none d-lg-block">
              {% include 'responsive-image-aspect-ratio' with
                  image: section.settings.hero_desktop,
                  hero_aspect_ratio:47,
                  bgPosition: 'contain',
                  max_width: 2000,
                  max_height: 2000,
              %}
            </div>
            <div class="col-12 text-center">
              <h1>{{ section.settings.hero_heading }}</h1>
            </div>
            <div class="col-12 text-center">
              <p>{{ section.settings.hero_text }}</h1>
            </div>
        </div>
        <div class="row my-5 my-md-0">
        <!--    
        <div class="col-12 col-md-6 my-md-5">
                <script src="https://www.powr.io/powr.js?platform=shopify"></script><div class="powr-map" id="8eb8509f_1569596984"></div>
            </div>
            
            -->
            <div class="col-12  my-3 my-md-5">
              <div class="row text-center mt-md-5">
                <div class="col-12">
                  <h2>{{ section.settings.map_heading }}</h1>
                </div>
              </div>
              <div class="row text-center py-md-5">
                <div class="col-6 py-3">
                  <h3>{{ section.settings.map_address_heading }}</h2>
                  <span class="info">{{ section.settings.map_address_text }}</span>
                </div>
                <div class="col-6 py-3">
                  <h3>{{ section.settings.map_hours_heading }}</h2>
                  <span class="info">{{ section.settings.map_hours_text }}</span>
                </div>
                <div class="col-6 py-3">
                  <h3>{{ section.settings.map_services_heading }}</h2>
                  <span class="info">{{ section.settings.map_services_text }}</span>
                </div>
                <div class="col-6 py-3 my-auto">
                  <a class="btn" href="{{ section.settings.map_cta_link }}">{{ section.settings.map_cta_label }}</a>
                </div>
              </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-5 pb-5">
                <div class="store_carousel_wrap">
                    {% for block in section.blocks %}
                        <div class="slide">
                            {% include 'responsive-image-aspect-ratio' with
                                image: block.settings.carousel_img,
                                hero_aspect_ratio:62,
                                bgPosition: 'contain',
                                max_width: 2000,
                                max_height: 2000,
                            %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

<div class="slider_nav">
    <span class="customNextBtn">{% include 'icon-chevron-right' %}</span>
    <span class="customPrevBtn">{% include 'icon-chevron-left' %}</span>
</div>


{% schema %}
  {
	"name": "The Store",
	"settings": [{
			"id": "hero_mobile",
			"type": "image_picker",
			"label": "Mobile Hero Image"
		},
		{
			"id": "hero_desktop",
			"type": "image_picker",
			"label": "Desktop Hero Image"
		},
		{
			"id": "hero_heading",
			"type": "text",
			"label": "Hero Heading",
			"default": "Sharon Springs Mercantile"
		},
		{
			"id": "hero_text",
			"type": "textarea",
			"label": "Hero Text"
		},
		{
			"id": "map_heading",
			"type": "text",
			"label": "Map - Heading",
			"default": "PLAN YOUR VISIT"
		},
		{
			"id": "map_address_heading",
			"type": "text",
			"label": "Map - Address Heading",
			"default": "ADDRESS"
		},
    {
			"id": "map_address_text",
			"type": "richtext",
			"label": "Map - Address Text"
		},
		{
			"id": "map_hours_heading",
			"type": "text",
			"label": "Map - Hours Heading",
			"default": "HOURS"
		},
    {
			"id": "map_hours_text",
			"type": "richtext",
			"label": "Map - Hours Text"
		},
		{
			"id": "map_services_heading",
			"type": "text",
			"label": "Map - Services Heading",
			"default": "NEIGHBOR SERVICES"
		},
    {
			"id": "map_services_text",
			"type": "richtext",
			"label": "Map - Services Text"
		},
		{
			"id": "map_cta_label",
			"type": "text",
			"label": "Map - Button Label",
			"default": "Get Directions"
		},
		{
			"id": "map_cta_link",
			"type": "url",
			"label": "Map - Button Link"
		}
	],
	"blocks": [{
		"type": "image",
		"name": "Slide",
		"settings": [{
			"id": "carousel_img",
			"type": "image_picker",
			"label": "Slide - Image"
		}]
	}]
}
{% endschema %}

