{{ 'owl.carousel.min.js' | asset_url | script_tag }}

{% comment %}
  This is a required section for the Shopify Theme Store.
  It is available when you add "Collection list" section in the Theme Editor.
{% endcomment %}

{% for block in section.blocks %}
  {% case block.type %}

    {% when 'hero-main' %}
      {% include 'skincare-hero' %}

    {% when 'skincare-experts' %}
      {% include 'skincare-experts-copy' %}

    {% when 'skincare-offer' %}
      {% include 'skincare-offer' %}

    {% when 'WKDevent' %}
      {% include 'WKDevent' %}

    {% when 'skincare-howitworks' %}
      {% include 'skincare-howitworks' %}

  {% endcase %}
{% endfor %}

{% schema %}
  {
    "name": "Skincare Landing",
    "blocks": [
      {
        "type": "hero-main",
        "name": "Skincare Hero Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "desktop_image",
            "label": "Hero Image"
          },
          {
            "id": "heroAspectRatio_mobile",
            "type": "select",
            "label": "Mobile Aspect Ratio",
            "default": "100",
            "options": [
              {"value": "100", "label": "1:1"},
              {"value": "75", "label": "3:4"},
              {"value": "56.25", "label": "9:16"}
            ]
          },
          {
            "id": "heroTitle",
            "type": "text",
            "label": "Hero Title",
            "default": "Hero Title"
          },
