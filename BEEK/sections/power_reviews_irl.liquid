<script>
  POWERREVIEWS.display.render({
    api_key: "e85b3292-f0e0-41d8-acc2-b7b423889c34",
    locale: "en_US",
    merchant_id: "1433387162",
    IRL_SHOWNATIVE: false,
    components: {
      IRLSnippet: "pr-irlsnippet",
    }
  });
