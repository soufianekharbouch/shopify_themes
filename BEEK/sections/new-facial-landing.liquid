{% comment %}
This is a required section for the Shopify Theme Store.
It is available when you add "Collection list" section in the Theme Editor.
{% endcomment %}


{% for block in section.blocks %}
    {% case block.type %}

      {% when 'new-facial-discover' %}
        {% include 'new-facial-discover' %}

        {% when 'new-facial-how-it-works' %}
            {% include 'new-facial-how-it-works' %}

    {% endcase %}
  {% endfor %}

  {% schema %}
    {
      "name": "New Facial Landing",
      "blocks": [
        {
          "type": "new-facial-discover",
          "name": "New Facial Discover",
          "settings": [
            {
              "id":"desktop_hero_image",
              "type":"image_picker",
              "label":"Desktop Hero Image"
            },
            {
              "id":"mobile_hero_image",
              "type":"image_picker",
              "label":"Mobile Hero Image"
            },
            {
              "id":"discover_heading",
              "type":"text",
              "label":"Discover Heading",
              "default":"Discover the power of goat milk skincare"
            },
            {
              "id":"discover_text",
              "type":"text",
              "label":"Discover Text",
              "default":"Your skin deservs better. STOP using products that sensitize your skin and START using products that nourish your skin’s microbiome."
            },
            {
              "type": "url",
              "id": "discover_button_link",
              "label": "Mobile Button URL"
            },
            {
              "type": "text",
              "id": "discover_button_label",
              "label": "Mobile Button Label",
              "default": "Get Started"
            }
          ]
        },
        {
          "type": "new-facial-how-it-works",
          "name": "New Facial How It Works",
          "settings": [
            {
              "id":"hiw_section_heading",
              "type":"text",
              "label":"Section Heading",
              "default":"How It Works"
            },
            {
              "id":"hiw_section_desc",
              "type":"text",
              "label":"Section Description",
              "default":"This tool will assess your skin’s microbiome  and curate a list of all the Beekman 1802 products you’ll need for optimal skin health."
            },
            {
              "id":"hiw_step1_image",
              "type":"image_picker",
              "label":"Setp 1 Image"
            },
            {
              "id":"hiw_step1_title",
              "type":"text",
              "label":"Step 1 Title",
              "default":"Step 1: take a selfie"
            },
            {
              "id":"hiw_step1_text1",
              "type":"text",
              "label":"Step 1 Text1",
              "default":"Your selfie will be taken directly in the app, you can not upload an image."
            },
            {
              "id":"hiw_step1_text2",
              "type":"text",
              "label":"Step 1 Text2",
              "default":"You need good lighting, clean skin, neutral expression and eyes open."
            },
            {
              "id":"hiw_step2_image",
              "type":"image_picker",
              "label":"Setp 2 Image"
            },
            {
              "id":"hiw_step2_title",
              "type":"text",
              "label":"Step 2 Title",
              "default":"Step 2: Review Results"
            },
            {
              "id":"hiw_step2_text1",
              "type":"text",
              "label":"Step 2 Text1",
              "default":"Review your skin health and uncover opportunities to balance your microbiome."
            },
            {
              "id":"hiw_step2_text2",
              "type":"text",
              "label":"Step 2 Text2",
              "default":"Select the skin concern you would like to focus on and review your skin biome matrix and  products tailored for your needs."
            },
            {
              "id":"hiw_step3_image",
              "type":"image_picker",
              "label":"Setp 3 Image"
            },
            {
              "id":"hiw_step3_title",
              "type":"text",
              "label":"Step 3 Title",
              "default":"Step 3: Review Products"
            },
            {
              "id":"hiw_step3_text1",
              "type":"text",
              "label":"Step 3 Text1",
              "default":"Review your skin health and uncover opportunities to balance your microbiome."
            }
          ]
        }
      ]
  }
  {% endschema %}

  {% stylesheet %}
