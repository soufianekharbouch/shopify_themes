/*============================================================================
  #Product Hover Effects
==============================================================================*/

@mixin productHoverTransition(){
  @include transition(0.5s);
}

$captionFontSize: rem(26px);

.product_image {
  position: relative;
  overflow: hidden;

  img {
    width: 100%;
    @include productHoverTransition();
  }


  //Create an element-wide overlay
  &:after {
    @include productHoverTransition();
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    content: " ";
  }

  &:hover:after {
    background-color: rgba(255, 255, 255, 0.76);
    z-index: 5;
  }

  .product_image_caption {
    @include productHoverTransition();

    position: absolute;
    text-align: center;
    top: 50%;
    left: 0;
    width: 100%;
    opacity: 0;
    z-index: 6;
    color: $colorOverlayText;
    padding: 0px em(10px) 0px em(10px);

    h2, .h2 {
      // Move the element up by half it's size to totally centre it.
      margin-top: calc(-#{em(26px)} / 2);
    }

  }


  &:hover {

    .product_image_caption {
        opacity: 1;
      }


    img {
      @include prefix('filter', 'blur(2px)');
      @include prefix('transform', 'scale(1.03)');
    }
  }
}

.grid__image--hover {
  $captionSize : 70%;
  position: relative;

  a {
    color: $colorTextBody;
  }

  .price {
    font-size: 1em;
    margin-top: -5px;
  }

  .product_image_caption {
    position: absolute;
    width: $captionSize;
    padding: 1.5em 1.5em 1.4em 1.5em;
    opacity: 0;
    color: $colorOverlayText;
    background-color: $colorOverlayBackground;

    text-align: center;
    transition: opacity 0.2s;
    max-width: 325px;
    margin: 0 auto;
    display: block;
    left: 50%;
    bottom: 10%;

    @include transform('translateX(-50%)');

      h6, .h6 { color: $colorOverlayText; margin-bottom: 0; }

    .lt-ie9 & {
    /* IE8+ - must be on one line, unfortunately */
    -ms-filter: "progid:DXImageTransform.Microsoft.Matrix(M11=1, M12=0, M21=0, M22=1, SizingMethod='auto expand')";

    /* IE6 and 7 */
    // filter: progid:DXImageTransform.Microsoft.Matrix(M11=1,M12=0,M21=0,M22=1,SizingMethod='auto expand');
    //Centering
    margin-left: -77px;
    margin-top: -3px;

    }

  }

  &:hover .product_image_caption {
    opacity: 1;
    transition: 0s;
  }

}

.grid__image--caption {
  @extend .grid__image--hover;

  .product_image_caption {
    h6 { color: $colorTextBody;}
    opacity: 1;
    :not(.supports-touch) & {color: $colorTextBody;}

    background-color: $colorBody !important;
    width: 100%;
    max-width: none;
    margin: 0 auto;
    max-height: 50%;
    display: block;
    @include transform('none');
    padding: 1.50em 1.5em 1.4em 1.5em; // 1.85
    min-height: 85px; //105px
    position: static;

  }

}

//For touch devices, we need to have the overlay
//be always visible as we can't rely on hover.
.supports-touch .product_image_caption, {
  opacity: 1;
  background-color: transparentize($colorOverlayBackground, 0.05);
  width: 100%;
  max-width: none;
  margin: 0 auto;
  max-height: 50%;
  position: static;
  display: block;
  @include transform('none');
  padding: 1.50em 1.5em 1.4em 1.5em; // 1.85
  min-height: 85px; //105px

  h2, .h2 {margin-top: 0;}
}

.focus_image {
  &, img {@include productHoverTransition(); }

  &:hover {
    img {
      @include prefix('transform', 'scale(1.03)');
    }
  }
}

.price {
  @include productHoverTransition();
  margin-bottom: 0;
}

/*============================================================================
  #Animations
==============================================================================*/


@include keyframes(fade-and-flip) {
  0%   {
    @include prefix('transform', 'rotate(90deg)');
    opacity: 1;
  }
  25% {
    @include prefix('transform', 'rotate(90deg)');
  }
  49% {
    @include prefix('transform', 'rotate(90deg)');
    opacity: 0;
  }
  50% {
    @include prefix('transform', 'rotate(270deg)');
    opacity: 0;
  }
  100% {
    @include prefix('transform', 'rotate(270deg)');
    opacity: 1;
  }
}

@include keyframes(fade-in) {
  0% { opacity: 0;}
  33% { opacity: 0;}
  100% { opacity: 1;}
}

//Bug: Putting this class declaration ABOVE any @include at-query breaks the at-query.
.fade-and-flip:before {
  position: relative;
  display: inline-block !important; //allows us to rotate the pseudo-element
  @include animation('fade-and-flip 0.4s ease-out 1 forwards');
}

.fade-in:before {
  position: relative;
  display: inline-block !important; //allows us to rotate the pseudo-element
  @include animation('fade-in 0.4s ease-in 1 forwards');
}

/*============================================================================
  #Exit Intent
==============================================================================*/

.exit-intent {
  position: relative;
  max-width: 525px;
  max-height: 435px;
  top: 50%;
  left: 50%;
  width: 75%;
  @include at-query($min, $medium + 1){ width: 50% }
  background-color: $colorBody;
  color: $colorTextBody;
  @include prefix('transform-style', 'preserve-3d');
  @include prefix('transform-origin', '50% 0');
  @include backface(hidden);
  transition: all 0.3s;
  opacity: 0;
  text-align: center;
  display: table;
  @include transform('translateX(-50%) translateY(-50%) rotateX(-60deg)');

  .show & {
    @include transform('translateX(-50%) translateY(-50%)');
    opacity: 1;
  }

  input {
    width: 100%;
    padding-left: 13px;
  }
  .btn {width: 100%; margin-top: 10px;}


  .close-exit-intent {
    position: absolute;
    right: 1em;
    top: 1em;
  }
}

.exit-intent__content {
  padding: 2.5em;
}

.exit-intent-overlay {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0,0,0,0.8);
  opacity: 0;
  @include prefix('perspective', '1000px');


  z-index: -1;
  &.show {
    opacity: 1;
    z-index: 100000; //one higher than .helper-note
  }
}


//The exit intent image only appears for larger screensizes
@include at-query($min, $medium + 1){
  .exit-intent--large {
    max-width: em(800px);
    width: 100%;

    .exit-intent__content {
      width: 50%;
    }
  }
}

.exit-intent__image {
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
  -ms-behavior: url({{'backgroundsize.min.htc' | asset_url }}); //polyfill IE8
  width: 100%;

  height: em(600px);
  max-height: 75vh;
  min-height: em(250px); //handles a very short viewport

  display: none;

  @include at-query($min, $medium + 1){
    display: block;
  }
}

//FF bugs

//Firefox doesn't play nicely with some of the backface and perspective stuff
//Confirmed in 41.0.1.  Mozilla will likely fix soon and then we can remove this
//but leave it in until they do.
@-moz-document url-prefix() {
    .exit-intent  {
      //Remove rotate() as we don't get the effect we want with perspective
      @include transform('translateX(-50%) translateY(-50%)');
    }


    //Firefox has some jumpiness on OSX for scale of overlaid images,
    //there are issues in bugzilla
    //All the classes that have kenburns enabled.  Unfortunately we can't append
    //this to the mixin because that's now how te *-document selector works.
    .featured-blog__image:hover, .ken-burns, .cell-wrapper--has-alternate-image:hover img, .collection-block__image-wrapper:hover .collectionBlock__image {
      @include prefix('transform', 'initial');
    }
}

/*============================================================================
  #Animation Layer
==============================================================================*/

$animation-sequence-curve: cubic-bezier(.19,1,.22,1);

%slide-up-animation-start {
  opacity: 0;
  transition: opacity 0.2s linear, transform 0s linear 1s;
  @include prefix('transform', 'translateY(20px)');
}

%slide-up-animation-end {
  opacity: 1;
  transition: opacity 0.6s $animation-sequence-curve, transform 1.5s $animation-sequence-curve;
  @include prefix('transform', 'translateY(0)');
}

// Carousel
.shopify-section.carousel .carousel-slide-text h1,
.shopify-section.carousel .carousel-slide-text p,
.shopify-section.carousel .carousel-slide-text .button-container {
  @extend %slide-up-animation-start;
}

.shopify-section.carousel .visible .carousel-slide-text {

  h1, p, .button-container {
    @extend %slide-up-animation-end;
  }

  h1 { transition-delay: 0.4s; }
  p { transition-delay: 0.5s; }
  .button-container { transition-delay: 0.6s; }
}

// Featured Collections and Home Grid
body:not(.ios) .shopify-section.featured-collections figcaption.can-animate,
body:not(.ios) .shopify-section.index-grid-wrapper figcaption.can-animate {

  h3, .index-grid-item-text, .btn {
    @extend %slide-up-animation-start;
  }
}

body:not(.ios) .shopify-section.featured-collections.visible figcaption.can-animate,
body:not(.ios) .shopify-section.index-grid-wrapper .index-grid-item.visible figcaption.can-animate {
  opacity: 1;

  h3, .index-grid-item-text, .btn {
    @extend %slide-up-animation-end;
  }

  @for $i from 0 to 5 {
    $delay: $i * 200;
    &.animation-sequence-#{$i} {

      h3 { transition-delay: #{200 + $delay}ms; }
      .index-grid-item-text { transition-delay: #{300 + $delay}ms; }
      .btn { transition-delay: #{400 + $delay}ms; }
    }
  }
}

// Video
body:not(.ios) .shopify-section.video-player .feature-video-slide-text.can-animate {

  h1, p, a {
    @extend %slide-up-animation-start;
  }
}

body:not(.ios) .shopify-section.video-player.visible .feature-video-slide-text.can-animate {

  h1, p, a {
    @extend %slide-up-animation-end;
  }

  h1 { transition-delay: 400ms; }
  p { transition-delay: 500ms; }
  a { transition-delay: 600ms; }
}

// Testimonials
body:not(.ios) .shopify-section.testimonials {

  .index-testimonials-items.can-animate > article {
    opacity: 0;
    transition: opacity 1s linear;
  }

  @for $i from 0 to 3 {
    $delay: $i * 100;

    &.visible .index-testimonials-items.can-animate > article.animation-sequence-#{$i} {
      transition-delay: #{200 + $delay}ms;
    }
  }

  &.visible .index-testimonials-items.can-animate > article {
    opacity: 1;
  }
}

// Features
body:not(.ios) .shopify-section.features {

  .index-features-items.can-animate > article {
    opacity: 0;
    transition: opacity 1s linear;
  }

  @for $i from 0 to 3 {
    $delay: $i * 100;

    &.visible .index-features-items.can-animate > article.animation-sequence-#{$i} {
      transition-delay: #{200 + $delay}ms;
    }
  }

  &.visible .index-features-items.can-animate > article {
    opacity: 1;
  }
}

