/*================ Section Headers ================*/

.section-header {
  display: table;
  width: 100%;

  h1 + .meta-info {
    margin-top: -0.5rem;
    margin-bottom: 1.5rem;
  }

  p:last-child {
    margin-bottom: 0;
  }

.section-header:before {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;

  .with-overlay & {
    content: '';
  }
}



  //Make sure the spacing is equidistant
  //This handles the case of last and first child
  //being the same element (i.e. the only one)
  > div{
    > *:first-child{
      margin-top: 0.625rem;
    }

    > *:last-child{
      margin-bottom: 3rem;
    }
  }

}

@include at-query ($min, $postSmall) {

  .section-header__title {
    margin-bottom: 0;
  }

  .section-header__title + p{
    margin-top: .5rem;
  }

  .section-header__left {
    //this gives us proper centering when it's wrapped in a centred table
    //e.g. on the collections list page
    display: inline-block;
    vertical-align: text-bottom;
    margin-bottom: 0;

    h1, h2, h3, h4,
    .h1, .h2, .h3, .h4 {
      margin-bottom: 0;
    }

    p:last-of-type {
      margin-bottom: 1.5rem;
    }

    & + a {
      float: right;
      //This offsets the a tag so that the baseline is the same with the
      //.h1 before it.  h1 = 36px (2.25 rem) / 2
      position: relative;
      top: 1.25em;
    }
  }

  .section-header__right {
    display: table-cell;
    vertical-align: middle;
    text-align: right;
    width: 335px;

