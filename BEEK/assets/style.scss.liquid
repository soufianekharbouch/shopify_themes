    }
  }

  &.has-hover:hover .image-wrapper {
    transform: scale($zoom);
    @supports (-ms-accelerator:true) { transform: none; }
    @media all and (-ms-high-contrast: none), (-ms-high-contrast: active) { transform: none; }
    .ie9, .lt-ie9 { transform: none; }
  }

