<!doctype html>
<html
    class="no-js supports-no-cookies"
    lang="{{ shop.locale }}"
    style="--sf-page-opacity: 0;"
>

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<meta name="theme-color" content="{{ settings.color_accent }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="dns-prefetch" href="{{ canonical_url }}" crossorigin>
    <link rel="dns-prefetch" href="https://cdn.shopify.com" crossorigin>
    <link rel="preconnect" href="{{ canonical_url }}" crossorigin>
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preload" as="style" href="{{ 'theme.css' | asset_url }}">
    <link rel="preload" as="script" href="{{ 'app.min.js' | asset_url }}">
	{%- if settings.favicon != blank -%}
	<link rel="shortcut icon" href="{{ settings.favicon | image_url: width: 32, height: 32 }}" type="image/png">
	{%- endif -%}

  <title>
    {{ shop.name }} &ndash; {{ 'general.password_page.opening_soon' | t }}
  </title>

  {%- if page_description -%}
		<meta name="description" content="{{ page_description | escape }}">
  {%- endif -%}
    
  {% liquid
    render 'social-meta-tags'
    render 'font-face'
    render 'critical-css'
    render 'critical-scripts'
    render 'style-tags'
    render 'custom-code-head'
  %} 
  
  {{ content_for_header }}
  {% style %}
    .sf__newsleter-form  input {
      margin: 0;
    }
  {% endstyle %}
</head>
<body
    class="template-{{ template.name | handle }} relative min-h-screen"
>
    <div class="hidden">{% section 'header' %}</div>
    <main role="main" id="MainContent" style="padding-top: 0 !important;">
        {{ content_for_layout }}
    </main>
    {% render 'custom-code-body' %}
    {% render 'foxkit-messenger' %}
    {% render 'script-tags' %}
</body>
</html>
