{% comment %}
  Renders product variant options

  Accepts:
  - product: {Object} product object.
  - option: {Object} current product_option object.
  - block: {Object} block object.


  Usage:
  {% render 'product-variant-options',
    product: product,
    option: option,
    block: block
  %}
{% endcomment %}
{%- liquid
  assign variants_available_arr = product.variants | map: 'available'
  assign variants_option1_arr = product.variants | map: 'option1'
  assign variants_option2_arr = product.variants | map: 'option2'
  assign variants_option3_arr = product.variants | map: 'option3'

  assign product_form_id = 'product-form-' | append: section.id
-%}

{%- for value in option.values -%}
  {%- liquid
    assign option_disabled = true

    for option1_name in variants_option1_arr
      case option.position
        when 1
          if variants_option1_arr[forloop.index0] == value and variants_available_arr[forloop.index0]
            assign option_disabled = false
          endif
        when 2
          if option1_name == product.selected_or_first_available_variant.option1 and variants_option2_arr[forloop.index0] == value and variants_available_arr[forloop.index0]
            assign option_disabled = false
          endif
        when 3
          if option1_name == product.selected_or_first_available_variant.option1 and variants_option2_arr[forloop.index0] == product.selected_or_first_available_variant.option2 and variants_option3_arr[forloop.index0] == value and variants_available_arr[forloop.index0]
            assign option_disabled = false
          endif
      endcase
    endfor
  -%}

  {%- if block.settings.picker_type == 'button' -%}
    <input
      type="radio" {% if option.name == 'Kleur' or option.name == 'Die Farbe' or option.name == 'Color' or option.name == 'Pillocases' %} class="mysize"{% else %}class="{% for variant in product.variants %} {% if variant.metafields.custom.default.value == 'yes' %} setclick {% endif %}{% endfor %} mysize"{% endif %}
      id="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}"
      name="{{ option.name }}"
      value="{{ value | escape }}"
      form="{{ product_form_id }}"
      {% if option.selected_value == value %}
        checked
      {% endif %}
      {% if option_disabled %}
        class="disabled"
      {% endif %}
    >
    <label for="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}" class="labee-{{ forloop.index0 }}">
      
           
{% if option.name == 'Offre' or option.name == 'Choisis ta couleur' or option.name == 'Color' or option.name == 'Pillocases' %} 
            {% assign options1 = '' %}
            {% for variant in product.variants %}
                  {% assign vari = variant.image | img_url %}
                      {% if variant.title contains value %}
                           
                          {% assign options1 = options1 | append: ',' | append: vari %} 
                          {% assign var_price = variant.price | money %}
                          {% assign var_des = variant.metafields.custom.variant_one_description.value %}
                          {% assign var_subdes = variant.metafields.custom.variant_one_discount.value %}
                        {% assign varc_price = variant.compare_at_price | money %}

                       

                      {% endif %}
            {% endfor %}
            {% assign options2 = options1 | remove_first: ',' | split: ',' | uniq %}
            <img src="{{ options2 }}" name="{{ value }}" variant="{{ value }}"> 
         
    {% else %}
  




{% if option.name == 'Choix' %}
{% for variant in product.variants %}


{% if variant.title contains value %}

{% assign var_subdes = variant.metafields.custom.variant_one_discount.value %}
{% assign var_des = variant.metafields.custom.variant_one_description.value %}
<span class="save-text">{{ var_subdes }}</span>

<div class="pricesssss">{{ var_des }}</div>

{% endif %}
{% endfor %}  
{% endif %}

  <div class="pricesssss_footer">      {{ value }}    </div>
      
    {% endif %}
      <span class="visually-hidden">{{ 'products.product.variant_sold_out_or_unavailable' | t }}</span>
    </label>
  {%- elsif block.settings.picker_type == 'dropdown' -%}
    <option
      value="{{ value | escape }}"
      {% if option.selected_value == value %}
        selected="selected"
      {% endif %}
    >
      {% if option_disabled -%}
        {{- 'products.product.value_unavailable' | t: option_value: value -}}
      {%- else -%}
        {{- value -}}
      {%- endif %}
    </option>
  {%- endif -%}
{%- endfor -%}

 

