            {%- else -%}
              {{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}
            {%- endif -%}
          </small>
        </div>

        <!-- CTAs -->

        <div class="cart__ctas" {{ block.shopify_attributes }}>
          <noscript>
            <button type="submit" class="cart__update-button button button--secondary" form="CartDrawer-Form">
              {{ 'sections.cart.update' | t }}
            </button>
          </noscript>

          <button
            type="submit"
            id="CartDrawer-Checkout"
            class="cart__checkout-button button"
            name="checkout"
            form="CartDrawer-Form"
            {% if cart == empty %}
              disabled
            {% endif %}
          >
            {{ 'sections.cart.checkout' | t }}
          </button>
        </div>
      </div>
      <div class="cust_footer_icon">
        <span>Excellent</span
        ><img class="payment" src="https://cdn.shopify.com/s/files/1/0760/7762/9780/files/stars_new.webp?v=1687242407"
        ><img
          class="payment trust_star"
          src="https://cdn.shopify.com/s/files/1/0760/7762/9780/files/trust-logo.png?v=1687242406"
        >
      </div>
